<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.atguigu.mobileplayer0224.MainActivity">

    <include layout="@layout/titlebar" />

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <RadioGroup
        android:padding="8dp"
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#22000000"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/rb_local_video"
            style="@style/myStyle"
            android:drawableTop="@drawable/rb_local_video_selector"
            android:text="本地视频" />


        <RadioButton
            android:id="@+id/rb_local_audio"
            style="@style/myStyle"
            android:drawableTop="@drawable/rb_local_audio_selector"
            android:text="本地音频" />


        <RadioButton
            android:id="@+id/rb_net_audio"
            style="@style/myStyle"
            android:drawableTop="@drawable/rb_net_audio_selector"
            android:text="网络音频" />



        <RadioButton
            android:id="@+id/rb_net_video"
            style="@style/myStyle"
            android:drawableTop="@drawable/rb_net_video_selector"
            android:text="网络视频" />


    </RadioGroup>


</LinearLayout>
